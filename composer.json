{
  "name": "drd-plus/handbooks-story",
  "license": "proprietary",
  "type": "library",
  "description": "Complete story from Drd+ handbooks",
  "keywords": [
    "Drd plus",
    "rules",
    "handbook",
    "story"
  ],
  "autoload": {
    "psr-4": {
      "DrdPlus\\": "DrdPlus/"
    }
  },
  "require": {
    "php": ">=7.1",
    "roave/security-advisories": "dev-master",
    "granam/string": "dev-master",
    "drd-plus/rules-html-skeleton": "dev-master"
  },
  "require-dev": {
    "phpunit/phpunit": "~6.0"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "pre-autoload-dump": [
      "cp --no-clobber $PWD/vendor/drd-plus/rules-html-skeleton/favicon.ico $PWD",
      "rm -f ./images/generic && ln -s ../vendor/drd-plus/rules-html-skeleton/images/generic ./images/generic",
      "rm -f ./css/generic && ln -s ../vendor/drd-plus/rules-html-skeleton/css/generic ./css/generic"
    ],
    "post-install-cmd": [
      "rm -f cache/pages/*"
    ]
  }
}
